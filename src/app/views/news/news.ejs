<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="#" class="navbar-brand mx-auto">NEWS</a>
    </nav>
      
    <div class="container">
        <div class="row">

            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                        <th>ID</th>
                        <th>Tittle</th>
                        <th>Noticias</th>
                    </tr>
                    <% for(var i=0; i < news.length; i++){ %>
                        <tr>
                            <td><%= news[i].id_news %></td>
                            <td><%= news[i].tittle %></td>
                            <td><%= news[i].news %></td>
                        </tr>
                    <% } %>
                </table>
            </div>

            <div class="col-md-6 mt-4 card">
                <form action="/news" method="post" class="card-body">
                    <h3 class="card-title">Add news</h3>
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" 
                        placeholder="Title" id="titulo">
                    </div>
                    <div class="form-group">
                        <input type="text" name="news" class="form-control" 
                        placeholder="Content">
                    </div>
                    <input type="submit" class="btn btn-primary">
                </form>
            </div>

        </div>
    </div>
    
    <script>
        document.getElementById('titulo').focus();
    </script>

</body>
</html>